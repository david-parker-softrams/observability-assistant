/* LogAI TUI Stylesheet */

/* Application-wide styles */
Screen {
    background: $surface;
}

/* Header styles */
Header {
    background: $primary;
    color: $foreground;
    height: 3;
}

/* Messages container */
#messages-container {
    background: $surface;
    border: solid $primary;
    height: 1fr;
}

/* Message styles */
.user-message {
    height: auto;
    background: $primary;
    color: $foreground;
    padding: 1 2;
    margin: 1 0 1 4;
    border: solid $primary-darken-2;
    border-title-align: left;
}

.assistant-message {
    height: auto;
    background: $panel;
    color: $foreground;
    padding: 1 2;
    margin: 1 4 1 0;
    border: solid $panel-darken-2;
    border-title-align: left;
}

.system-message {
    height: auto;
    background: $surface;
    color: $text-disabled;
    padding: 1 2;
    margin: 1;
    text-align: center;
    text-style: italic;
}

.loading-indicator {
    height: auto;
    background: $panel;
    color: $text-disabled;
    padding: 1 2;
    margin: 1 4 1 0;
    border: solid $panel-darken-2;
}

.error-message {
    height: auto;
    background: $error;
    color: $foreground;
    padding: 1 2;
    margin: 1;
    border: solid $error-darken-2;
}

/* Input container */
#input-container {
    height: auto;
    background: $surface;
}

/* Chat input */
ChatInput {
    border: solid $primary;
    padding: 0 1;
    height: 3;
    background: $panel;
}

ChatInput:focus {
    border: solid $accent;
}

/* Status bar */
StatusBar {
    height: 1;
    background: $panel;
    color: $text-disabled;
    padding: 0 2;
    dock: bottom;
}
